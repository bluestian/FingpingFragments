<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RadioGroup
        android:id="@+id/btn_rg_ia"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#cec6c6"
        android:orientation="horizontal"
        android:padding="2dp"
       android:layout_alignParentBottom="true">
    <RadioButton
        android:id="@+id/btn_recomment"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:drawableTop="@drawable/btn_tab_recomment_selector"
        android:button="@null"
        android:gravity="center"
         android:textColor="@color/btn_tab_text_color"
        android:text="推荐"/>
        <RadioButton
            android:id="@+id/btn_discover"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/btn_tab_discover_selector"
            android:button="@null"
            android:gravity="center"
            android:textColor="@color/btn_tab_text_color"
            android:text="发现"/>
        <RadioButton
            android:id="@+id/btn_shop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/btn_tab_shop_selector"
            android:button="@null"
            android:gravity="center"
            android:textColor="@color/btn_tab_text_color"
            android:text="商城"/>
        <RadioButton
            android:id="@+id/btn_toic"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/btn_tab_toic_selector"
            android:button="@null"
            android:gravity="center"
            android:textColor="@color/btn_tab_text_color"
            android:text="食话"/>
        <RadioButton
            android:id="@+id/btn_wode"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/btn_tab_wode_selector"
            android:button="@null"
            android:gravity="center"
            android:textColor="@color/btn_tab_text_color"
            android:text="我的"/>



    </RadioGroup>
</RelativeLayout>